<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/transaction_text_size_1"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/transaction_padding"
            android:gravity="center"
            android:id="@+id/transaction_category_view">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/transaction_text_size_1"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/transaction_padding"
            android:gravity="center"
            android:id="@+id/transaction_timestamp_view">
        </TextView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textSize="@dimen/transaction_text_size_2"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/transaction_padding"
            android:gravity="center"
            android:id="@+id/transaction_name_view">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textSize="@dimen/transaction_text_size_2"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/transaction_padding"
            android:gravity="center"
            android:id="@+id/transaction_cost_view">
        </TextView>
    </RelativeLayout>

</LinearLayout>
